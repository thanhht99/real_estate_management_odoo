<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_orders_ecommerce" model="ir.actions.act_window">
        <field name="name">Cart</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form,kanban,activity</field>
        <field name="domain">[]</field>
        <field name="context">{'show_sale': True, 'search_default_order_confirmed': 1, 'search_default_from_website': 1}</field>
        <!-- <field name="search_view_id" ref="view_sales_order_filter_ecommerce"/> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                There is no confirmed order from the website
            </p>
        </field>
    </record>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]" position="inside">
                <field name="sale_date"/>
            </xpath>
            <xpath expr="//group/group[2]/field[@name='validity_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Agency List" name="agency_list">
                            <!-- <group>
                                <group name="group_bds">
                                    <field name="attribute" string="Properties"/>
                                    <field name="description" string="Describe"/>
                                </group>
                                <group name="group_bds2">
                                    <field name="area" string="Acreage"/>
                                    <field name="parcel_number" string="Number of plots"/>
                                </group>
                            </group> -->
                </page>
            </xpath>
        </field>
    </record>
    
    <!-- Main website sale menu items -->
    <menuitem id="menu_orders" 
        name="Cart"
        action="action_orders_ecommerce"
        parent="main_real_estate"
        groups="base.group_user"/>
</odoo>
