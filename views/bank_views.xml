<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="bank_form_view" model="ir.ui.view">
            <field name="name">rem.bank.form.view</field>
            <field name="model">rem.bank</field>
            <field name="arch" type="xml">
                <form>
                    <h1>BANK</h1>
                    <fields name="name"></fields>
                    <fields name="bank_code"></fields>
                    <fields name="bank_branch"></fields>
                </form>
            </field>
        </record>

        <record id="bank_tree_view" model="ir.ui.view">
            <field name="name">rem.bank.tree.view</field>
            <field name="model">rem.bank</field>
            <field name="arch" type="xml">
                <tree string="Bank" default_order="create_date desc">
                    <field name="name"/>
                    <field name="bank_code"/>
                    <field name="bank_branch"/>                                     
                </tree>
            </field>
        </record>

        <record id="action_bank" model="ir.actions.act_window">
            <field name="name">Bank</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rem.bank</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('bank_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('bank_form_view')})]"/>
        </record>

        <!-- <menuitem id="main_real_estate"
            name="Real Estate"            
            sequence="7"
            groups="base.group_user"/>

        <menuitem id="project_menu" 
                name="Project"
                sequence="2"
                action="action_project"                
                parent="main_real_estate"/> -->

    </data>
</odoo>